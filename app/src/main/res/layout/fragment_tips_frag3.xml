<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorFragTip2"
    tools:context=".TipsFrag3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tvImg3"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/tips3" />

        <TextView
            android:id="@+id/tvTit3"
            android:layout_marginTop="32dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tvImg3"
            android:text="@string/tv_tips_contam"/>
        <TextView
            android:id="@+id/tvUno3"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            style="@style/textView_tips"
            app:layout_constraintTop_toBottomOf="@id/tvTit3"
            android:text="@string/tv_tip6"/>
        <TextView
            android:id="@+id/tvDos3"
            android:layout_width="match_parent"
            style="@style/textView_tips"
            app:layout_constraintTop_toBottomOf="@id/tvUno3"
            android:text="@string/tv_tip7"/>
        <TextView
            android:id="@+id/tvTres3"
            android:layout_width="match_parent"
            style="@style/textView_tips"
            app:layout_constraintTop_toBottomOf="@id/tvDos3"
            android:text="@string/tv_tip8"/>

        <TextView
            android:id="@+id/tvCuatro3"
            android:layout_width="match_parent"
            style="@style/textView_tips"
            app:layout_constraintTop_toBottomOf="@id/tvTres3"
            android:text="@string/tv_tip9"/>

        <TextView
            android:layout_width="match_parent"
            style="@style/textView_tips"
            app:layout_constraintTop_toBottomOf="@id/tvCuatro3"
            android:text="@string/tv_tip10"/>

        <Button
            android:id="@+id/btnAtras3"
            style="@style/buttonTips"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnOmitir3"
            android:textSize="20sp"
            android:text="@string/btn_atras" />

        <Button
            android:id="@+id/btnOmitir3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnAtras3"
            app:layout_constraintEnd_toStartOf="@id/btnAvanzar3"
            android:text="@string/btn_omitir"
            style="@style/buttonTips" />

        <Button
            android:id="@+id/btnAvanzar3"
            style="@style/buttonTips"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnOmitir3"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/btn_avanzar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>